{% extends 'base.html.jinja' %}
{% from 'bootstrap5/form.html' import render_form %}
{% from 'bootstrap5/pagination.html' import render_pagination %}

{% block content %}
<div class="container p-5 my-5 border">
    <div class="mb-3">
        {{ render_form(itemSearchForm, form_type="inline") }}
        共搜索到 {{pagination.total}} 项内容。
    </div>
    {{ render_pagination(pagination,
    name=itemSearchForm.name.data,
    brand=itemSearchForm.brand.data,
    spec=itemSearchForm.spec.data
    ) }}
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>物品</th>
                <th>品牌</th>
                <th>规格</th>
            </tr>
        </thead>
        <tbody>
            {% for itemsku in pagination.items %}
            <tr>
                <td>{{ itemsku.item.name }}</td>
                <td>{{ itemsku.brand }}</td>
                <td>{{ itemsku.spec }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {{ render_pagination(pagination,
    name=itemSearchForm.name.data,
    brand=itemSearchForm.brand.data,
    spec=itemSearchForm.spec.data
    ) }}
</div>
{% endblock %}