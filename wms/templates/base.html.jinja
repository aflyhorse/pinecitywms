<!DOCTYPE html>
<html lang="zh-cn">

<head>
    {% block head %}
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% block styles %}
    {{ bootstrap.load_css() }}
    {% endblock %}
    <title>青松城设备科仓库管理系统</title>
    {% endblock %}
</head>

<body>
    {% for message in get_flashed_messages() %}
    <div class="alert alert-warning fade show">{{ message }}</div>
    {% endfor %}
    <nav class="navbar navbar-expand-sm bg-light">
        <div class="container-fluid">
            <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link" href="{{ url_for('index') }}">青松城设备科仓库管理系统</a></li>
                {% if current_user.is_authenticated %}
                {% if user.is_admin %}
                <li class="nav-item"><a class="nav-link" href="{{ url_for('item') }}">物品管理</a></li>
                {% endif %}
                <li class="nav-item"><a class="nav-link" href="{{ url_for('logout') }}">登出</a></li>
                {% endif %}
            </ul>
        </div>
    </nav>
    {% block content %}{% endblock %}
    {% block scripts %}
    {{ bootstrap.load_js() }}
    {% endblock %}
</body>

</html>