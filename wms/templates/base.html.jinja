{% from 'bootstrap5/utils.html' import render_messages %}
{% from 'bootstrap5/nav.html' import render_nav_item %}
<!DOCTYPE html>
<html lang="zh-cn">
    <head>
        {% block head %}
            <meta charset="utf-8">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <meta name="description" content="青松城设备科仓库管理系统 - 用于管理设备和物品的仓库管理系统">
            <meta name="keywords" content="仓库管理,设备管理,物品管理,青松城,设备科">
            {% block styles %}
                {{ bootstrap.load_css() }}
            {% endblock styles %}
            <title>青松城设备科仓库管理系统</title>
        {% endblock head %}
    </head>
    <body>
        {{ render_messages() }}
        <nav class="navbar navbar-expand-sm bg-light">
            <div class="container-fluid">
                <div class="d-flex justify-content-start">
                    <ul class="navbar-nav">
                        {{ render_nav_item('index', '青松城设备科仓库管理系统') }}
                        {% if current_user.is_authenticated %}
                            {{ render_nav_item('inventory', '库存管理') }}
                            {% if user.is_admin %}
                                {{ render_nav_item('item', '物品管理') }}
                                {{ render_nav_item('records', '操作记录') }}
                                {{ render_nav_item('statistics', '出库统计') }}
                            {% endif %}
                        </ul>
                    </div>
                    <div class="d-flex justify-content-end"></div>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link">你好，{{ user.nickname }}</a>
                        </li>
                        {{ render_nav_item('logout', '登出') }}
                    </ul>
                {% endif %}
            </div>
        </nav>
        {% block content %}
        {% endblock content %}
        {% block scripts %}
            {{ bootstrap.load_js() }}
        {% endblock scripts %}
    </body>
</html>
