{% extends "base.html.jinja" %}
{% from 'bootstrap5/pagination.html' import render_pagination %}
{% from 'bootstrap5/utils.html' import render_icon %}

{% block content %}
<div class="container-fluid p-5 my-5">
    <div class="card mb-4">
        <div class="card-header">
            <h3>操作记录</h3>
            <form method="get">
                <div class="row g-3 align-items-end">
                    <div class="col-md-2">
                        <label class="form-label">记录类型</label>
                        <select name="type" class="form-select" onchange="this.form.submit()">
                            <option value="all" {% if record_type=='all' %}selected{% endif %}>全部</option>
                            <option value="stockin" {% if record_type=='stockin' %}selected{% endif %}>入库</option>
                            <option value="stockout" {% if record_type=='stockout' %}selected{% endif %}>出库</option>
                            <option value="takestock" {% if record_type=='takestock' %}selected{% endif %}>盘点</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">仓库</label>
                        <select name="warehouse" class="form-select" onchange="this.form.submit()">
                            {% if user.is_admin %}
                            <option value="">全部仓库</option>
                            {% endif %}
                            {% for warehouse in warehouses %}
                            <option value="{{ warehouse.id }}" {% if warehouse_id|int==warehouse.id %}selected{% endif
                                %}>
                                {{ warehouse.name }}
                            </option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">开始日期</label>
                        <input type="date" name="start_date" class="form-control" value="{{ start_date }}">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">结束日期</label>
                        <input type="date" name="end_date" class="form-control" value="{{ end_date }}">
                    </div>
                </div>

                <datalist id="item-names">
                    {% for name in item_names %}
                    <option value="{{ name }}">{{ name }}</option>
                    {% endfor %}
                </datalist>

                <div class="row g-3 align-items-end mt-2">
                    <div class="col-md-2">
                        <label class="form-label">物品名称</label>
                        <input type="text" name="item_name" class="form-control" value="{{ item_name or '' }}"
                            placeholder="搜索物品" list="item-names" autocomplete="off">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">品牌/规格</label>
                        <input type="text" name="sku_desc" class="form-control" value="{{ sku_desc or '' }}"
                            placeholder="搜索品牌或规格">
                    </div>
                    {% if record_type == 'stockin' or record_type == 'all' %}
                    <div class="col-md-2">
                        <label class="form-label">{{ '入库单号' if record_type == 'stockin' else '单号' }}</label>
                        <input type="text" name="refcode" class="form-control" value="{{ refcode or '' }}"
                            placeholder="搜索单号">
                    </div>
                    {% endif %}
                    {% if record_type == 'stockout' or record_type == 'takestock' or record_type == 'all' %}
                    <div class="col-md-2">
                        <label class="form-label">区域/部门/具体地点</label>
                        <input type="text" name="location_info" class="form-control" value="{{ location_info or '' }}"
                            placeholder="搜索地点">
                    </div>
                    {% endif %}
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary">查询</button>
                        <a href="{{ url_for('records_export') }}{{ '?' + request.query_string.decode() if request.query_string }}"
                            class="btn btn-success">导出</a>
                    </div>
                </div>
            </form>
        </div>

        {% if current_sku and warehouse_stocks %}
        <div class="card-body border-top">
            <h5 class="mb-3">
                <span class="text-primary">{{ current_item.name }}</span>
                <span class="text-muted">{{ current_sku.brand }} - {{ current_sku.spec }}</span>
                库存情况
            </h5>
            <div class="table-responsive">
                <table class="table table-sm table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th>仓库</th>
                            <th class="text-end">剩余数量</th>
                            <th class="text-end">平均价格</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for warehouse_item, warehouse in warehouse_stocks %}
                        <tr>
                            <td>{{ warehouse.name }}</td>
                            <td class="text-end">{{ warehouse_item.count }}</td>
                            <td class="text-end">¥{{ "%.2f"|format(warehouse_item.average_price) }}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        {% endif %}

        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        {% if record_type == 'all' %}<th>类型</th>{% endif %}
                        <th>日期</th>
                        <th>物品</th>
                        <th>品牌 - 规格</th>
                        <th>数量</th>
                        {% if record_type != 'all' %}<th>价格</th>{% endif %}
                        <th>仓库</th>
                        {% if record_type == 'stockin' %}
                        <th>单号</th>
                        {% elif record_type == 'takestock' %}
                        <th>操作员</th>
                        {% elif record_type == 'stockout' %}
                        <th>操作员</th>
                        <th>区域</th>
                        <th>部门</th>
                        <th>具体地点</th>
                        {% elif record_type == 'all' %}
                        <th>部门</th>
                        <th>其他信息</th>
                        {% endif %}
                        <th> </th>
                    </tr>
                </thead>
                <tbody>
                    {% for transaction in pagination.items %}
                    <tr{% if transaction.receipt.revoked %} class="text-decoration-line-through" {% endif %}>
                        {% if record_type == 'all' %}
                        <td>
                            {% if transaction.receipt.type.name == 'STOCKIN' %}入库
                            {% elif transaction.receipt.type.name == 'STOCKOUT' %}出库
                            {% elif transaction.receipt.type.name == 'TAKESTOCK' %}盘点
                            {% endif %}
                        </td>
                        {% endif %}
                        <td>{{ transaction.receipt.date.strftime('%Y-%m-%d %H:%M') }}</td>
                        <td><a href="{{ url_for('records', item_id=transaction.itemSKU.item.id, type=record_type) }}" style="color: #0d6efd; text-decoration: none;">{{ transaction.itemSKU.item.name }}</a></td>
                        <td><a href="{{ url_for('records', sku_id=transaction.itemSKU.id, type=record_type) }}" style="color: #0d6efd; text-decoration: none;">{{ transaction.itemSKU.brand }} - {{ transaction.itemSKU.spec }}</a></td>
                        <td>{{ transaction.count }}</td>
                        {% if record_type != 'all' %}<td>¥{{ "%.2f"|format(transaction.price) }}</td>{% endif %}
                        <td>{{ transaction.receipt.warehouse.name }}</td>
                        
                        {% if record_type == 'stockin' %}
                        <td>{{ transaction.receipt.refcode }}</td>
                        {% elif record_type == 'takestock' %}
                        <td>{{ transaction.receipt.operator.nickname }}</td>
                        {% elif record_type == 'stockout' %}
                        <td>{{ transaction.receipt.operator.nickname }}</td>
                        <td>{{ transaction.receipt.area.name if transaction.receipt.area else '' }}</td>
                        <td>{{ transaction.receipt.department.name if transaction.receipt.department else '' }}</td>
                        <td>{{ transaction.receipt.location }}</td>
                        {% elif record_type == 'all' %}
                        <td>{{ transaction.receipt.department.name if transaction.receipt.department else '' }}</td>
                        <td>
                            {% if transaction.receipt.type.name == 'STOCKIN' %}
                                {{ transaction.receipt.refcode }}
                            {% elif transaction.receipt.type.name == 'STOCKOUT' %}
                                {{ transaction.receipt.location }}
                            {% elif transaction.receipt.type.name == 'TAKESTOCK' %}
                                {{ transaction.receipt.note or '' }}
                            {% endif %}
                        </td>
                        {% endif %}
                        
                        <td class="text-end">
                            <div class="d-inline-flex">
                                <div style="width: 16px; text-align: center">
                                    {% if transaction.receipt.note %}
                                    <span data-bs-toggle="tooltip" data-bs-placement="left"
                                        title="{{ transaction.receipt.note }}">
                                        {{ render_icon('info-circle') }}
                                    </span>
                                    {% endif %}
                                </div>
                                <div style="width: 16px; margin-left: 8px; text-align: center">
                                    {% if not transaction.receipt.revoked %}
                                    <a href="{{ url_for('receipt_detail', receipt_id=transaction.receipt.id) }}"
                                        data-bs-toggle="tooltip" data-bs-placement="right" title="撤销">
                                        {{ render_icon('x-circle') }}
                                    </a>
                                    {% endif %}
                                </div>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
            {% if pagination %}
            <div class="mt-3">
                {{ render_pagination(pagination,
                type=record_type,
                warehouse=warehouse_id,
                start_date=start_date,
                end_date=end_date,
                refcode=refcode,
                location_info=location_info,
                item_name=item_name,
                sku_desc=sku_desc,
                item_id=item_id,
                sku_id=sku_id,
                args=request.args) }}
            </div>
            {% endif %}
        </div>
    </div>
</div>

<script>
    // Initialize tooltips
    document.addEventListener('DOMContentLoaded', function () {
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    });
</script>
{% endblock content %}