{% extends "base.html.jinja" %}
{% from 'bootstrap5/pagination.html' import render_pagination %}
{% from 'bootstrap5/utils.html' import render_icon %}

{% block content %}
<div class="container p-5 my-5">
    <div class="card mb-4">
        <div class="card-header">
            <h3>操作记录</h3>
            <form method="get">
                <div class="row g-3 align-items-end">
                    <div class="col-md-2">
                        <label class="form-label">记录类型</label>
                        <select name="type" class="form-select" onchange="this.form.submit()">
                            <option value="stockin" {% if record_type == 'stockin' %}selected{% endif %}>入库</option>
                            <option value="stockout" {% if record_type == 'stockout' %}selected{% endif %}>出库</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">仓库</label>
                        <select name="warehouse" class="form-select" onchange="this.form.submit()">
                            {% if user.is_admin %}
                            <option value="">全部仓库</option>
                            {% endif %}
                            {% for warehouse in warehouses %}
                            <option value="{{ warehouse.id }}" {% if warehouse_id|int == warehouse.id %}selected{% endif %}>
                                {{ warehouse.name }}
                            </option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">开始日期</label>
                        <input type="date" name="start_date" class="form-control" value="{{ start_date }}">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">结束日期</label>
                        <input type="date" name="end_date" class="form-control" value="{{ end_date }}">
                    </div>
                </div>
                
                <datalist id="item-names">
                    {% for item in item_names %}
                    <option value="{{ item.name }}">
                    {% endfor %}
                </datalist>
                
                <div class="row g-3 align-items-end mt-2">
                    <div class="col-md-2">
                        <label class="form-label">物品名称</label>
                        <input type="text" name="item_name" class="form-control" value="{{ item_name or '' }}" placeholder="搜索物品" list="item-names" autocomplete="off">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">品牌/规格</label>
                        <input type="text" name="sku_desc" class="form-control" value="{{ sku_desc or '' }}" placeholder="搜索品牌或规格">
                    </div>
                    {% if record_type == 'stockin' %}
                    <div class="col-md-2">
                        <label class="form-label">单号</label>
                        <input type="text" name="refcode" class="form-control" value="{{ refcode or '' }}" placeholder="搜索单号">
                    </div>
                    {% else %}
                    <div class="col-md-2">
                        <label class="form-label">区域/部门/具体地点</label>
                        <input type="text" name="location_info" class="form-control" value="{{ location_info or '' }}" placeholder="搜索地点">
                    </div>
                    {% endif %}
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary">查询</button>
                        <a href="{{ url_for('records_export') }}{{ '?' + request.query_string.decode() if request.query_string }}" class="btn btn-success">导出</a>
                    </div>
                </div>
            </form>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>日期</th>
                        <th>物品</th>
                        <th>品牌 - 规格</th>
                        <th>数量</th>
                        <th>价格</th>
                        <th>仓库</th>
                        {% if record_type == 'stockin' %}
                        <th>单号</th>
                        {% else %}
                        <th>操作员</th>
                        <th>区域</th>
                        <th>部门</th>
                        <th>具体地点</th>
                        {% endif %}
                        <th> </th>
                    </tr>
                </thead>
                <tbody>
                    {% for transaction in pagination.items %}
                        <tr>
                            <td>{{ transaction.receipt.date.strftime('%Y-%m-%d %H:%M') }}</td>
                            <td>{{ transaction.itemSKU.item.name }}</td>
                            <td>{{ transaction.itemSKU.brand }} - {{ transaction.itemSKU.spec }}</td>
                            <td>{{ transaction.count if record_type == 'stockin' else -transaction.count }}</td>
                            <td>¥{{ "%.2f"|format(transaction.price) }}</td>
                            <td>{{ transaction.receipt.warehouse.name }}</td>
                            {% if record_type == 'stockin' %}
                            <td>{{ transaction.receipt.refcode }}</td>
                            {% else %}
                            <td>{{ transaction.receipt.operator.nickname }}</td>
                            <td>{{ transaction.receipt.area.name if transaction.receipt.area else '' }}</td>
                            <td>{{ transaction.receipt.department.name if transaction.receipt.department else '' }}</td>
                            <td>{{ transaction.receipt.location }}</td>
                            {% endif %}
                            <td>
                                {% if transaction.receipt.note %}
                                <span data-bs-toggle="tooltip" data-bs-placement="right" title="{{ transaction.receipt.note }}">
                                    {{ render_icon('info-circle') }}
                                </span>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            {% if pagination %}
                <div class="mt-3">
                    {{ render_pagination(pagination,
                        type=record_type,
                        warehouse=warehouse_id,
                        start_date=start_date,
                        end_date=end_date,
                        refcode=refcode,
                        location_info=location_info,
                        item_name=item_name,
                        sku_desc=sku_desc,
                        args=request.args) }}
                </div>
            {% endif %}
        </div>
    </div>
</div>

<script>
    // Initialize tooltips
    document.addEventListener('DOMContentLoaded', function() {
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    });
</script>
{% endblock content %}